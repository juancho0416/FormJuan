@page "{id:int}"
@model form.Pages.EditarUsuarioModel
@{
    ViewData["Title"] = "Editar Usuario";
}

<h2>Editar Usuario</h2>

@if (TempData["Mensaje"] is string msg && !string.IsNullOrWhiteSpace(msg))
{
    <div class="alert alert-info">@msg</div>
}

<form method="post">
    <input type="hidden" asp-for="Usuario.Id" />

    <div class="form-group">
        <label asp-for="Usuario.Nombre"></label>
        <input asp-for="Usuario.Nombre" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Usuario.Apellido"></label>
        <input asp-for="Usuario.Apellido" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label asp-for="Usuario.Correo"></label>
        <input asp-for="Usuario.Correo" class="form-control" readonly />
    </div>

    <div class="form-group">
        <label>Rol</label>
        @{
            var correoSesion = HttpContext.Session.GetString("correo");
            var esMismoUsuario = string.Equals(correoSesion, Model.Usuario.Correo, StringComparison.OrdinalIgnoreCase);
            var esAdminActual = string.Equals(Model.Usuario.Rol, "Administrador", StringComparison.OrdinalIgnoreCase);
        }
        <select asp-for="Usuario.Rol" class="form-control">
            @* Evita RZ1031: usa bloques en lugar de C# en atributos *@
            @if (esMismoUsuario && esAdminActual)
            {
                <option value="Usuario" disabled>Usuario</option>
            }
            else
            {
                <option value="Usuario">Usuario</option>
            }
            <option value="Administrador">Administrador</option>
        </select>

        @if (esMismoUsuario && esAdminActual)
        {
            <small class="text-muted">No puedes quitarte a ti mismo el rol de Administrador.</small>
        }
    </div>

    <button type="submit" class="btn btn-primary">Guardar cambios</button>
    <a asp-page="/AdminPanel" class="btn btn-secondary">Cancelar</a>
</form>