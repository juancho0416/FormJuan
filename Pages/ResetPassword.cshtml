@page
@model form.Pages.ResetPasswordModel
@{
    ViewData["Title"] = "Restablecer contraseña";
}

<h1>Restablecer contraseña</h1>

@if (!string.IsNullOrEmpty(Model.Error))
{
    <div class="alert alert-danger">@Model.Error</div>
}

<form method="post" class="mt-3">
    <input type="hidden" asp-for="Token" />
    <div class="mb-3">
        <label for="nueva" class="form-label">Nueva contraseña</label>
        <input asp-for="Nueva" id="nueva" class="form-control" type="password" required minlength="8" />
        <span class="form-text">Usa una contraseña segura (mínimo 8 caracteres).</span>
    </div>
    <button class="btn btn-primary" type="submit">Guardar</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}