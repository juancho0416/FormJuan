@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/First"><i class="icon icon-home"></i></a></li>
    <li class="breadcrumb-item"><a href="/index">Inicio</a></li>
    <li class="breadcrumb-item active" aria-current="page"><a href="/Index">Login</a></li>
</ol>

<h2>Login</h2>
<hr class="red">
</hr>

<form method="post" novalidate>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <!-- Campos -->
    <div class="mb-3">
        <label asp-for="Input.Email" class="form-label">Email</label>
        <input asp-for="Input.Email" class="form-control" type="text" placeholder="Ingrese su correo" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Input.Password" class="form-label">Contraseña</label>
        <input asp-for="Input.Password" class="form-control" type="password" placeholder="Ingrese su contraseña" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>

    <!-- Botón centrado -->
    <div class="text-center">
        <button type="submit" class="btn btn-primary w-100">Entrar</button>
    </div>

    <!--Enlace debajo -->
    <div class="text-center mt-2">
        <a asp-page="/Olvide" class="text-muted" style="font-size:0.95rem;">
            ¿Olvidaste tu contraseña?
        </a>
    </div>
</form>



@if (!ModelState.IsValid)
{
    <div class="mt-3 alert @(ModelState.IsValid ? "alert-success" : "alert-danger")">
        @if (ModelState.IsValid)
        {
            <div> Login/registro válido</div>
            @if (TempData["Mensaje"] != null)
            {
                <div class="mt-2">@TempData["Mensaje"]</div>
            }
        }
        else
        {
            <div>Datos invalidos,corrijalos porfavor</div>
        }
    </div>

}
<div>
    <a asp-page="/Index" class="btn btn-danger">Reintentar</a>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
</div>
@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger mt-3">
        @Model.ErrorMessage
    </div>
}