@page
@model PaginaPrincipalModel
@{
    ViewData["Title"] = "Inicio";
}
<h1>Inicio</h1>
<hr class="red" />
<style>
    .bs_glyphicons {
        display: flex;
        justify-content: center;
        align-items: center;
        min height: 70vh;
    }

    .bs-glyphicons-list {
        display: flex;
        justify-content: center;
        gap: 3rem;
        list-style: none;
        padding: 0;
        margin: 0;
        flex-wrap: wrap;
    }

    .bs-glyphicons-list li {
        text-align: center;
        position: relative;
        color: #611232;
        height: auto;
        width: calc(33.3% - 1rem);
        border-radius: 16px;
        float: left;
        background-size: 100%;
        background-repeat: no-repeat;
        background-image: url(image.png);
    }


    .icon_link {
        color: inherit;
        text-decoration: none;
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.25rem;
        transition: transform 0.15s;
        cursor: pointer;
        padding: 8px;
        border-radius: 6px;
    }

    .icon-link:hover {
        transform: translateY(-3px) scale(1.03);
        text-decoration: none;
        color: inherit;

    }

    .gobmxfont {
        font-size: 2.5rem;
    }

    .glyphicon-class {
        color: inherit;
        font-size: 2.15rem;
    }
    }
</style>
<div class="bs-glyphicons">
    <ul class="bs-glyphicons-list">
        <li>
            <a class="icon-link" asp-page="/Login" title="Login">
                <span class="gobmxfont icon-user" aria-hidden="true"></span>
                <span class="glyphicon-class">Iniciar Sesion</span>
            </a>
        </li>
        <li>
            <a class="icon-link" asp-page="/Registro" title="Registro">
                <span class="gobmxfont icon-tramite" aria-hidden="true"></span>
                <span class="glyphicon-class">Crear cuenta</span>
            </a>
        </li>
    </ul>
</div>