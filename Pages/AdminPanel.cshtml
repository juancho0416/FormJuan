@page
@model form.Pages.AdminPanelModel
@{
    ViewData["Title"] = "Panel de Administración";
}

<h2>Panel de Administración</h2>

@if (TempData["StatusMessage"] is string msg && !string.IsNullOrWhiteSpace(msg))
{
    <div class="alert alert-info">@msg</div>
}

@if (Model.IsAdmin)
{
    <table class="table table-striped table-sm">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Correo</th>
                <th>Rol</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var u in Model.Usuarios)
            {
                var correoSesion = HttpContext.Session.GetString("correo");
                var esMismo = string.Equals(correoSesion, u.Correo, StringComparison.OrdinalIgnoreCase);
                var esAdmin = string.Equals(u.Rol, "Administrador", StringComparison.OrdinalIgnoreCase);

                <tr>
                    <td>@u.Id</td>
                    <td>@u.Nombre</td>
                    <td>@u.Apellido</td>
                    <td>@u.Correo</td>
                    <td>@u.Rol</td>
                    <td>
                        <a asp-page="/EditarUsuario" asp-route-id="@u.Id" class="btn btn-primary btn-sm">Editar</a>
                        <a asp-page="/DetalleUsuario" asp-route-id="@u.Id" class="btn btn-primary btn-sm">Ver</a>

                        @if (esAdmin || esMismo)
                        {
                            <button type="button" class="btn btn-danger btn-sm" disabled title="No permitido">Eliminar</button>
                        }
                        else
                        {
                            <form method="post" asp-page-handler="Delete" class="d-inline"
                                onsubmit="return confirmarEliminar(@u.Id)">
                                <input type="hidden" name="id" value="@u.Id" />
                                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                            </form>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning">Acceso denegado: se requiere rol Administrador.</div>
}

@section Scripts {
    <script>
        function confirmarEliminar(id) {
            return confirm("¿Seguro que deseas eliminar el usuario con Id=" + id + "? Esta acción no se puede deshacer.");
        }
    </script>
}
<div>
    <a asp-page="/Index" class="btn btn-danger">Volver</a>
</div>